{% extends 'base.html.twig' %}

{% block title %}Modifier Rendez-vous - Cabinet Dentaire{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"/>
    <style>
        .dental-container {
            padding: 2rem;
        }
        
        .dental-card {
            border-radius: 10px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            border: none;
            margin-bottom: 2rem;
            transition: transform 0.3s ease;
        }
        
        .dental-card:hover {
            transform: translateY(-3px);
        }
        
        .card-header {
            background: linear-gradient(135deg, #1a6fc9, #63a4ff);
            color: white;
            border-bottom: none;
            padding: 1rem 1.5rem;
        }
        
        .dental-input {
            border: 1px solid #ced4da;
            border-radius: 8px;
            transition: all 0.3s ease;
            padding: 10px;
        }
        
        .dental-input:focus {
            border-color: #1a6fc9;
            box-shadow: 0 0 0 0.2rem #1a6fc9;
        }
        
        .dental-btn {
            border-radius: 8px;
            padding: 0.5rem 1.25rem;
            font-weight: 500;
            transition: all 0.3s ease;
        }
        
        .dental-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        
        .btn-primary {
            background-color: #1a6fc9;
            border-color: #1a6fc9;
        }
        
        .btn-primary:hover {
            background-color: #155a9e;
            border-color: #1a6fc9;
        }
        
        .btn-outline-secondary {
            border-color: #6c757d;
            color: #6c757d;
        }
        
        .btn-outline-secondary:hover {
            background-color: #6c757d;
            border-color: #6c757d;
        }
        
        /* Delete button styling */
        .delete-form {
            display: inline-block;
            margin-left: 10px;
        }
        
        .delete-form button {
            border-radius: 8px;
            padding: 0.5rem 1.25rem;
            font-weight: 500;
            transition: all 0.3s ease;
            background-color: #dc3545;
            border-color: #dc3545;
            color: white;
        }
        
        .delete-form button:hover {
            background-color: #c82333;
            border-color: #bd2130;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(220, 53, 69, 0.3);
        }
        
        /* Simple fade-in animation */
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        .animated-form {
            animation: fadeIn 0.5s ease-out;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container dental-container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card dental-card animated-form">
                <div class="card-header">
                    <h2 class="h4 mb-0">
                        <i class="fas fa-calendar-edit mr-2"></i>Modifier Rendez-vous
                    </h2>
                </div>
                
                <div class="card-body">
                    {{ include('rendez_vous/form.html.twig', {'button_label': 'Mettre à jour'}) }}
                </div>
            </div>

            <div class="mt-3">
                <a href="{{ path('rendezvous_index') }}" class="btn btn-outline-secondary dental-btn">
                    <i class="fas fa-arrow-left mr-1"></i> Retour à la liste
                </a>
                {{ include('rendez_vous/delete.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}