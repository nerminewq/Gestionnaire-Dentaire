{% extends 'base.html.twig' %}

{% block title %}Accès refusé{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card border-danger">
                    <div class="card-header bg-danger text-white">
                        <h2 class="text-center mb-0">Accès refusé</h2>
                    </div>
                    <div class="card-body text-center">
                        <div class="mb-4">
                            <i class="fas fa-exclamation-triangle text-danger" style="font-size: 5rem;"></i>
                        </div>
                        
                        <h3 class="mb-3">Vous n'avez pas les droits nécessaires pour accéder à cette page</h3>
                        
                        <p class="lead">
                            Votre profil ne dispose pas des permissions requises pour visualiser le contenu demandé.
                        </p>
                        
                        <div class="mt-4">
                            <a href="{{ path('app_home') }}" class="btn btn-primary">Retour à l'accueil</a>
                            
                            {% if app.user %}
                                <a href="{{ path('app_profile') }}" class="btn btn-outline-secondary ms-2">Mon profil</a>
                            {% else %}
                                <a href="{{ path('app_login') }}" class="btn btn-outline-secondary ms-2">Connexion</a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
