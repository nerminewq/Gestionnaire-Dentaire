{% extends 'base.html.twig' %}

{% block title %}Modifier Facture - Cabinet Dentaire{% endblock %}

{% block body %}
<div class="container-fluid dental-container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card dental-card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2 class="h4 mb-0">
                            <i class="fas fa-file-invoice-dollar mr-2"></i>Modifier Facture
                        </h2>
                        <a href="{{ path('facture_index') }}" class="btn btn-light btn-sm dental-btn">
                            <i class="fas fa-arrow-left mr-1"></i> Retour
                        </a>
                    </div>
                </div>

                <div class="card-body">
                    {{ include('facture/form.html.twig', {'button_label': 'Mettre à jour la facture'}) }}
                </div>
            </div>

            <div class="d-flex justify-content-between mt-4 action-buttons">
                <div>
                    <a href="{{ path('facture_index') }}" class="btn btn-secondary dental-btn mr-2">
                        <i class="fas fa-list mr-1"></i> Retour à la liste
                    </a>
                </div>
                <div>
                    {{ include('facture/delete.html.twig') }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"/>
    <style>
        .dental-container {
            padding: 2rem;
        }
        
        .dental-card {
            border-radius: 10px;
            overflow: hidden;
            transition: transform 0.3s ease;
        }
        
        .dental-card:hover {
            transform: translateY(-5px);
        }
        
        .card-header {
            border-bottom: none;
        }
        
        .dental-btn {
            border-radius: 20px;
            padding: 0.5rem 1.25rem;
            font-weight: 500;
            transition: all 0.3s ease;
        }
        
        .dental-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        
        .btn-primary {
            background-color: #1a6fc9;
            border-color: #1a6fc9;
        }
        
        .btn-primary:hover {
            background-color: #155a9e;
            border-color: #145291;
        }
        
        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
        }
        
        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }
        
        .action-buttons {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        /* Style for the delete form (without changing its functionality) */
        .delete-form {
            display: inline-block;
        }
        
        .delete-form button {
            border-radius: 20px;
            padding: 0.5rem 1.25rem;
            transition: all 0.3s ease;
        }
        
        .delete-form button:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        
        /* Animation for form elements */
        .form-control {
            border: 1px solid #ced4da;
            border-radius: 8px;
            transition: all 0.3s ease;
            padding: 10px;
        }
        
        .form-control:focus {
            border-color: #1a6fc9;
            box-shadow: 0 0 0 0.2rem rgba(26, 111, 201, 0.25);
        }
        
        @media (max-width: 768px) {
            .action-buttons {
                flex-direction: column;
                gap: 10px;
            }
            
            .action-buttons > div {
                width: 100%;
            }
            
            .action-buttons .btn {
                width: 100%;
                margin-bottom: 10px;
            }
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add hover effects to all buttons
            const buttons = document.querySelectorAll('.btn');
            buttons.forEach(button => {
                button.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-2px)';
                    this.style.boxShadow = '0 4px 8px rgba(0, 0, 0, 0.1)';
                });
                
                button.addEventListener('mouseleave', function() {
                    this.style.transform = '';
                    this.style.boxShadow = '';
                });
            });
            
            // Add focus effects to form inputs
            const inputs = document.querySelectorAll('.form-control');
            inputs.forEach(input => {
                input.addEventListener('focus', function() {
                    this.style.borderColor = '#1a6fc9';
                    this.style.boxShadow = '0 0 0 0.2rem rgba(26, 111, 201, 0.25)';
                });
                
                input.addEventListener('blur', function() {
                    this.style.borderColor = '#ced4da';
                    this.style.boxShadow = 'none';
                });
            });
        });
    </script>
{% endblock %}